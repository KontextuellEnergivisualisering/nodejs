<!DOCTYPE html>
<html lang="en">
<head><% include partials/page/head.ejs %></head>
<body>

	<div id="wrapper">

	<!--Navigation-->
	<nav class="navbar navbar-default navbar-static-top" role="navigation" style="margin: bottom 0">
		<div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar">Test</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#">Kontextuell energivisualisering</a>
         </div>
	</nav>
	<div class="page-wrapper">
            
			<div class="row">
                <div class="col-md-8">
                    <div class="panel panel-default">
                         <div class="panel-heading">
                            <i class="fa fa-bar-chart-o fa-fw"></i> Real-Time
                        </div>
                        <div class="panel-body">
                            <div id="chartContainer" style="height:300px"></div>
                        </div>
                        <!-- /.panel-body -->
                    </div>
                </div>
                <div class="col-md-4">
	                <div class="panel panel-default">
	                	<div class="panel-heading">Notifications</div>
	                	<div class="panel-body">
	                		<div class="list-group">
                                <a href="#" class="list-group-item">
                                    <i class="fa fa-comment fa-fw"></i> New Peak in power
                                    <span class="pull-right text-muted small"><em>4 minutes ago</em>
                                    </span>
                                </a>
                                <a href="#" class="list-group-item">
                                    <i class="fa fa-twitter fa-fw"></i> Slow peak
                                    <span class="pull-right text-muted small"><em>12 minutes ago</em>
                                    </span>
                                </a>
                            </div>
                            <!-- /.list-group -->
                            <a href="#" class="btn btn-default btn-block">View All Alerts</a>
	                	</div>
	                </div>
                </div>
             </div>
             <!-- /.row -->
             <div class="row">
                <%var names = ['Energy', 'Power', 'Weekly Usage', 'Daily usage'];%>
                <%for(var i = 0; i < 4; i++){%>
                <div class="col-md-3">
                    <div class="panel panel-primary">
                        <div class="panel-heading">
                            <div class="row">
                                <div class="col-xs-3">
                                    <i class="fa fa-comments fa-5x"></i>
                                </div>
                                <div class="col-xs-9 text-right">
                                    <div id="card<%=i%>" class="huge">26</div>
                                    <div><%=names[i];%></div>
                                </div>
                            </div>
                        </div>
                        <a href="#">
                            <div class="panel-footer">
                                <span class="pull-left">View Details</span>
                                <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                                <div class="clearfix"></div>
                            </div>
                        </a>
                    </div>
                </div>
                <%}%>  
             </div>
	</div>
	<% include partials/page/jsdefaults.ejs%>
</body>
</html>
